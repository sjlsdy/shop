			</view>
		</view>
		<view class="section-nav section-attr" bindtap="switchAttrPop">
			<view class="t">规格选择</view>
			<view class="specification">{{checkedSpecText}}</view>
			<image class="i" src="../../static/b6images/WX-icon-down.png" />
		</view>
