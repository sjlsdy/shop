<!--屏幕背景变暗的背景  -->
<view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></view>

<!--海报预览-->
<view class="goodsPosters {{isPosters?'goodsPostersShow':''}}" wx:if="{{isPosters}}">
	<canvas canvas-id="canvasIn" wx:if="{{isPosters}}"></canvas>
	<view class="close" bindtap="colosePosters" wx:if="{{isPosters}}">口</view>
	<view class="btns" bindtap="savePosters" wx:if="{{isPosters}}">保存海报</view>
	<!--<view class="commodity_screen" bindtap="showModal">点击开始分享</view>-->
</view>

<!--分享框  -->
<view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
	<view class="share_tit">
		<view class="share">分享</view>
		<view class="share_close" bindtap="hideModal">X</view>
	</view>
	<view class="share_box">
		<view class="sharebtn">
			<button open-type='share' class="sharebtn-wx">分享给好友</button>
		</view>
		<view class="sharebtn">
			<button bindtap="generatePosters" class="sharebtn-pyq">分享到朋友圈</button>
		</view>
	</view>
</view>

<view class="goodsPostersMask" wx:if="{{isPosters}}"></view>
